@model object
@using Newtonsoft.Json;

<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Login</title>
	<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
	<style type="text/css">
		.header {
			font-family: Arial, Helvetica, sans-serif;
			font-size: 110px;
			text-align: center;
			font-weight: bold;
			color: red;
		}

			.header > .glyphicon {
				top: 2px;
				margin-left: -22px;
				font-size: 83px;
				font-weight: bold;
			}
	</style>
</head>
<body>
	<div>
		<div class="header">
			<span>N</span> <span class="glyphicon glyphicon-ban-circle"></span> <span>AUTH</span>
		</div>
	</div>
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<div id="login-form-mount-node">
					<span class="loading"></span>
				</div>
			</div>
		</div>
	</div>
	<script>
		State = @(Html.Raw(JsonConvert.SerializeObject(Model, new JsonSerializerSettings{ StringEscapeHandling = StringEscapeHandling.EscapeHtml })));
	</script>
	<script src="/dist/login.entry.js"></script>
</body>
</html>
